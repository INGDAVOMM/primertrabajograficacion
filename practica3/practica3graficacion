import tkinter as tk
from tkinter import messagebox

def sumar():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        resultado = num1 + num2
        label_resultado.config(text=f"Resultado: {resultado}")
        messagebox.showinfo("Resultado", f"La suma es: {resultado}")
    except ValueError:
        messagebox.showerror("Error", "Por favor, ingresa solo números válidos.")

# Crear ventana principal
ventana = tk.Tk()
ventana.title("🧮 Suma de dos números")
ventana.geometry("350x250")
ventana.config(bg="#f0f8ff")

# Etiquetas y campos de entrada
tk.Label(ventana, text="Número 1:", bg="#f0f8ff", font=("Arial", 12)).pack(pady=5)
entry1 = tk.Entry(ventana, font=("Arial", 12))
entry1.pack()

tk.Label(ventana, text="Número 2:", bg="#f0f8ff", font=("Arial", 12)).pack(pady=5)
entry2 = tk.Entry(ventana, font=("Arial", 12))
entry2.pack()

# Botón para sumar
boton_sumar = tk.Button(ventana, text="➕ Sumar", command=sumar, font=("Arial", 12), bg="#add8e6")
boton_sumar.pack(pady=10)

# Resultado
label_resultado = tk.Label(ventana, text="Resultado: ", bg="#f0f8ff", font=("Arial", 12, "bold"))
label_resultado.pack(pady=5)

# 🔹 Vincular tecla Enter con la función sumar()
ventana.bind("<Return>", lambda event: sumar())

ventana.mainloop()
